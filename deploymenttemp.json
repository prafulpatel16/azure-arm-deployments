{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",

    //Add first Parameter for storage account name
    "parameters":{
        "storageAccountName":{
            "type": "string",
            "metadata":{
                "description": "Storage Account Name"
            },
            "minLength": 3,
            "maxLength": 24

        },


    //Add second parameter for SKU type

    "storageSKU": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Standard_ZRS",
        "Premium_LRS",
        "Premium_ZRS",
        "Standard_GZRS",
        "Standard_RAGZRS"
      ]
    }
  
},
    //Add AZ Resources ie...storage,VMs etc

    "resources": [
       {
           "name": "[parameters('storageAccountName')]",
           "type": "Microsoft.Storage/storageAccounts",
           "apiVersion": "2021-04-01",
           "tags": {
               "displayName": "prpstorage1"
           },
           "location": "[resourceGroup().location]",
           "kind": "StorageV2",
           "sku": {
               "name": "[parameters('storageSKU')]",
               "tier": "Standard"
           }
       }
    ]
  }